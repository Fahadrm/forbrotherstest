<odoo>
  <data>
       <record id="sale_del_date_inherited_move_view" model="ir.ui.view">
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="invoice_user_id" position="after">
                   <field name="del_date"/>
                    <field name="cpo_reference"/>
                </field>

                 <xpath expr="//field[@name='invoice_line_ids']//field[@name='product_uom_id']" position="after">
                <field name="product_mrp" domain="[('product_id', '=', product_id),('name','!=',0)]" context="{'show_mrp':1}" options="{'no_create': True,'always_reload': True}" attrs="{'column_invisible': [('parent.move_type', 'not in', ('out_invoice', 'out_refund','out_receipt'))]}"/>
               </xpath>

                <xpath expr="//field[@name='line_ids']//field[@name='product_uom_id']" position="after">
                    <field name="product_mrp" domain="[('product_id', '=', product_id),('name','!=',0)]" context="{'show_mrp':1}" options="{'no_create': True,'always_reload': True}" attrs="{'column_invisible': [('parent.move_type', 'not in', ('out_invoice', 'out_refund','out_receipt'))]}"/>
               </xpath>
            </field>
        </record>
  </data>
</odoo>